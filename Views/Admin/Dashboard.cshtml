@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}

<div class="admin-container">
    <div class="admin-sidebar">
        <div class="sidebar-header">
            <h2>Admin Panel</h2>
        </div>
        <nav class="sidebar-nav">
            <ul>
                <li>
                    <a href="#home" class="nav-link active" data-section="home">
                        <i class="fas fa-home"></i>
                        <span>Home Content</span>
                    </a>
                </li>
                <li>
                    <a href="#videos" class="nav-link" data-section="videos">
                        <i class="fas fa-video"></i>
                        <span>Videos</span>
                    </a>
                </li>
                <li>
                    <a href="#skills" class="nav-link" data-section="skills">
                        <i class="fas fa-code"></i>
                        <span>Skills</span>
                    </a>
                </li>
                <li>
                    <a href="#projects" class="nav-link" data-section="projects">
                        <i class="fas fa-project-diagram"></i>
                        <span>Projects</span>
                    </a>
                </li>
                <li>
                    <a href="#about" class="nav-link" data-section="about">
                        <i class="fas fa-user"></i>
                        <span>About</span>
                    </a>
                </li>
            </ul>
        </nav>
        <div class="sidebar-footer">
            <a href="@Url.Action("Logout", "Admin")" class="btn btn-danger btn-block">
                <i class="fas fa-sign-out-alt"></i>
                <span>Logout</span>
            </a>
        </div>
    </div>

    <div class="admin-content">
        <div class="content-header">
            <h1>Welcome to Admin Dashboard</h1>
            <p class="text-muted">Manage your portfolio content and settings</p>
        </div>

        <div class="content-section active">
            <!-- Header Section Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-heading"></i>
                        Header Section
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Manage the main header content including title, subtitle, and action buttons.</p>
                    <button class="btn btn-primary" onclick="editSection('header')">
                        <i class="fas fa-edit"></i>
                        Edit Header
                    </button>
                </div>
            </div>

            <!-- Features List Section Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-list"></i>
                        Features List Section
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Manage the Key Skills & Technologies section with its three feature cards.</p>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-body">
                                    <h6 class="card-title">Frontend Development</h6>
                                    <button class="btn btn-primary btn-sm" onclick="editFeature('frontend')">
                                        <i class="fas fa-edit"></i>
                                        Edit
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-body">
                                    <h6 class="card-title">Backend Development</h6>
                                    <button class="btn btn-primary btn-sm" onclick="editFeature('backend')">
                                        <i class="fas fa-edit"></i>
                                        Edit
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-body">
                                    <h6 class="card-title">Design & Tools</h6>
                                    <button class="btn btn-primary btn-sm" onclick="editFeature('design')">
                                        <i class="fas fa-edit"></i>
                                        Edit
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- CTA Section Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-bullhorn"></i>
                        Call to Action Section
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Manage the CTA section content including title and subtitle.</p>
                    <button class="btn btn-primary" onclick="editSection('cta')">
                        <i class="fas fa-edit"></i>
                        Edit CTA Section
                    </button>
                </div>
            </div>

            <!-- Footer Section Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-shoe-prints"></i>
                        Footer Section
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Manage the footer content and links.</p>
                    <button class="btn btn-primary" onclick="editSection('footer')">
                        <i class="fas fa-edit"></i>
                        Edit Footer
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

